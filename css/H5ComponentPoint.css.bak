/* 散点图组件样式 */
.H5_component_point .point{
	position:absolute;
	border-radius:50%;
}
.H5_component_point .point .name{
	width:100%;
	height:30px;
	text-align:center;
	position:absolute;
	top:50%;
	margin-top:-15px;
	font-size:22px;
}
.H5_component_point .point .name .per{
	font-size:0.5em;
}
.H5_component_point .point_0{
	animation: shadowChange 1.5s linear 2s infinite;
}
@keyframes shadowChange{
	0% {box-shadow:0 0 0 0px rgba(237,199,199,0.8);}
	50% {box-shadow:0 0 0 10px rgba(237,199,199,0.8);}
	100% {box-shadow:0 0 0 20px rgba(237,199,199,0.8);}
}